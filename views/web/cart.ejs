<div class="main-banner inner" id="home">
    <!-- header -->
    <header class="header">
        <div class="container-fluid px-lg-5">
            <!-- nav -->
            <nav class="py-4">
                <div id="logo">
                    <h1> <a href="/"><span class="fa fa" aria-hidden="true">Tiệm Giày Mới</span> 
                    </a>
                </h1>
            </div>

            <label for="drop" class="toggle">Menu</label>
            <input type="checkbox" id="drop" />
            <ul class="menu mt-2">
                <li class="active"><a href="/">Trang chủ</a></li>
                <li>
                    <!-- First Tier Drop Down -->
                    <label for="drop-2" class="toggle">Danh mục giày <span class="fa fa-angle-down" aria-hidden="true"></span> </label>
                    <a href="#">Danh mục giày<span class="fa fa-angle-down" aria-hidden="true"></span></a>
                    <input type="checkbox" id="drop-2" />
                    <ul>
                        <%data.cates.forEach(function(cate){%>
                            <li><a href="/shop/<%=cate.slug%>"><%=cate.name%></a></li>
                        <%})%>  
                    </ul>
                </li>
                <li><a href="/about">Giới thiệu</a></li>
                <li><a href="/blog">Blog</a></li>
                <li><a href="/contact">Liên hệ</a></li>
                <li><a href="/cart">Giỏ hàng<small>(<%=data.lengthCart%>)</small></a></li>
            </ul>
        </nav>
        <!-- //nav -->
    </div>
</header>
</div>

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/">Trang chủ</a>
    </li>
    <li class="breadcrumb-item active">Giỏ hàng</li>
</ol>
<section class="ab-info-main py-md-5 py-4">
    <div class="container py-md-3">
        <!-- top Products -->
        <div class="row">
            <div class="col col-lg-8">
                <table class="table table-striped">
                    <thead>
                      <tr>
                        <th scope="col">Ảnh sản phẩm</th>
                        <th scope="col">Tên</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Đơn giá</th>
                        <th scope="col">Tổng cộng</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% if(data.cart != undefined){ data.cart.forEach(function(item){%>
                        <tr scope="row">
                            <td><img src="" alt="" width="120px" height="120px"></td>
                            <td><%= item.name%></td>
                            <td><%= item.qty%></td>
                            <td><%= item.price%></td>
                            <td><%= item.price*item.qty%></td>
                          </tr>
                    <%})}%>
                    </tbody>
                  </table>
                  <div class="" style="float: right;">
                      <p>Total: <%= data.total%> <span>VND</span></p>
                  </div>
            </div>
            <div class="col col-lg-4">
                <form action="/cart" method="POST">
                    <div class="form-group">
                      <label for="formGroupExampleInput">Tên khách hàng</label>
                      <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Tên" name="name">
                    </div>
                    <div class="form-group">
                      <label for="formGroupExampleInput2">Email</label>
                      <input type="email" class="form-control" id="formGroupExampleInput2" placeholder="Email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="phone">Điện thoại</label>
                        <input type="number" class="form-control" id="phone" placeholder="Điện thoại" name="phone">
                    </div>
                    <div class="form-group">
                        <label >Địa chỉ</label>
                        <textarea class="form-control" aria-label="With textarea" name="address"></textarea>
                    </div>
                    <div class="form-group">
                        <label >Ghi chú</label>
                        <textarea class="form-control" aria-label="With textarea" name="note"></textarea>
                    </div>
                    <button type="submit" class="btn btn-success  btn-user btn-block mt-2">Xác nhận mua hàng    </button>
                  </form>
                  
            </div>
        </div>
    </div>
</section>